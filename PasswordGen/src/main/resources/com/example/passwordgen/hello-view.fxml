<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.passwordgen.Controller">
    <children>
        <StackPane layoutX="50.0" layoutY="33.0" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #EFEFEF; -fx-border-color: #CCCCCC; -fx-border-radius: 5px;">
            <children>
                <Label layoutX="20.0" layoutY="20.0" text="Generated Password:" textFill="#333333">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="passwordField" editable="false" layoutX="20.0" layoutY="50.0" prefHeight="30.0" prefWidth="260.0" promptText="Click Generate button" />
            </children>
        </StackPane>
          <Button fx:id="generateButton" layoutX="153.0" layoutY="239.0" mnemonicParsing="false" onAction="#generatePassword" prefHeight="40.0" prefWidth="80.0" text="Generate">
              <font>
                  <Font size="14.0" />
              </font>
          </Button>
    </children>
</AnchorPane>
